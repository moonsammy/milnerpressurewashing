<style>
  .contact-bg { background: var(--navy); }
  .contact-bg .section-label { color: var(--sky); }
  .contact-grid {
    display: grid; grid-template-columns: 1fr 1.2fr;
    gap: 5rem; align-items: start;
  }
  .section-title { color: var(--white); }
  .contact-body {
    font-size: 0.95rem; line-height: 1.85;
    color: rgba(255,255,255,0.65); margin-bottom: 2.5rem;
  }
  .contact-details { display: flex; flex-direction: column; gap: 1.5rem; }
  .detail { display: flex; gap: 1rem; align-items: flex-start; }
  .detail-icon { font-size: 1.25rem; flex-shrink: 0; margin-top: 2px; }
  .detail strong {
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem; font-weight: 600;
    color: var(--white); display: block; margin-bottom: 0.2rem;
  }
  .detail p { font-size: 0.825rem; line-height: 1.6; color: rgba(255,255,255,0.55); }
  .contact-email {
    font-size: 0.825rem; color: var(--sky);
    text-decoration: none; transition: color 0.2s;
  }
  .contact-email:hover { color: white; }

  .form-card {
    background: var(--white); border-radius: 10px;
    padding: 2.5rem;
  }
  .form-placeholder-note {
    font-size: 0.75rem; color: var(--text-muted);
    font-style: italic; margin-bottom: 1.5rem;
    padding: 0.75rem; background: #fff8e6;
    border-left: 3px solid #f59e0b; border-radius: 3px;
  }
  .quote-form { display: flex; flex-direction: column; gap: 1.25rem; }
  .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1.25rem; }
  .form-group { display: flex; flex-direction: column; gap: 0.4rem; }
  .form-group label {
    font-family: 'Outfit', sans-serif;
    font-size: 0.8rem; font-weight: 600;
    color: var(--navy); letter-spacing: 0.03em;
  }
  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.7rem 0.9rem;
    border: 1.5px solid var(--border);
    border-radius: 5px; font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    color: var(--text); background: var(--off-white);
    opacity: 0.6; cursor: not-allowed;
    resize: vertical;
  }
  .form-submit {
    background: var(--blue); color: var(--white);
    border: none; border-radius: 5px;
    padding: 0.9rem; cursor: not-allowed;
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem; font-weight: 600;
    opacity: 0.6;
  }

  footer { background: #081520; padding: 2.5rem 3rem; }
  .footer-inner {
    max-width: 1100px; margin: 0 auto;
    display: flex; flex-direction: column;
    align-items: center; gap: 0.6rem; text-align: center;
  }
  .footer-logo {
    display: flex; align-items: center; gap: 0.6rem;
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem; font-weight: 600; color: var(--white);
  }
  .logo-mark-footer {
    background: var(--sky); color: var(--navy);
    padding: 0.2rem 0.5rem; border-radius: 3px;
    font-size: 0.8rem; font-weight: 700;
  }
  .footer-tagline { font-size: 0.8rem; color: rgba(255,255,255,0.4); }
  .footer-social { display: flex; gap: 1.25rem; align-items: center; margin: 0.25rem 0; }
  .footer-social-link {
    color: rgba(255,255,255,0.35); display: flex; align-items: center;
    transition: color 0.2s ease;
  }
  .footer-social-link:hover { color: var(--sky); }
  .footer-copy { font-size: 0.72rem; color: rgba(255,255,255,0.25); }

  @media (max-width: 768px) {
    .contact-grid { grid-template-columns: 1fr; gap: 2.5rem; }
    .form-row { grid-template-columns: 1fr; }
  }
</style>
